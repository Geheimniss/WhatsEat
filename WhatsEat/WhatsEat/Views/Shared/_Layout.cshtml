@using Microsoft.AspNetCore.Identity
@using WhatsEat.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WhatsEat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WhatsEat.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="navbar-bg" class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/logo.png" width="180" height="40" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">   
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">   
                        <li class="nav-item">
                            <a class="nav-link" id="manage" asp-area="" asp-controller="Recipes" asp-action="Index">Рецепты</a>
                        </li>
                        @if (User.IsInRole("Администратор") || User.IsInRole("Менеджер") || User.IsInRole("Пользователь"))
                        {
                            <li class="nav-item">
                                <a class ="nav-link" id="manage" asp-area="" asp-controller="Fridge" asp-action="Index">Холодильник</a>
                            </li>
                        }
                        @if (User.IsInRole("Администратор"))
                        {
                             <li class="nav-item">
                                 <a class="nav-link" id="manage" asp-area="" asp-controller="User" asp-action="Index">Пользователи</a>
                             </li>
                        }
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - WhatsEat - <a asp-area="" asp-controller="Home" asp-action="Privacy">Соглашение</a>
        </div>
    </footer>
    <script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
