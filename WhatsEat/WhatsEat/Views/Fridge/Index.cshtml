@model WhatsEat.ViewModel.UserFridgeViewModel
@{
}
<h1>Холодильник</h1>
<table class="table table-bordered table-dark">
    @*<thead>
    <th>
    Холодильник
    </th>
    </thead>*@
    <tbody>
        @foreach (ProductType type in Model.ProductTypes)
        {
            <tr>
                <th scope="col" width=15%>
                    @type.Name
                </th>
                <td>
                    @foreach (var product in @Model.Products)
                    {
                        @if (product.productType.Name == type.Name)
                        {
                           <span class="badge bg-light text-dark">@product.Name</span>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="AddProducts" class="btn-outline-dark">
        Добавить продукты
    </a>
</div>
