@model WhatsEat.ViewModel.UserFridgeVM
@{
}
<h1>Холодильник</h1>
<table class="table table-bordered table-dark">
    <tbody>
        @foreach (ProductType type in Model.ProductTypes)
        {
            <tr>
                <th scope="col" width=15%>
                    @type.Name
                </th>
                <td>
                    @foreach (var product in @Model.Products)
                    {
                        @if (product.productType.Name == type.Name)
                        {
                            @*TODO: Возможность удалять продукты*@
                            <a asp-action="DeleteProduct" asp-route-id="@product.Id">
                                <span class="badge bg-light text-dark">
                                    @product.Name
                                </span>
                            </a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="AddProducts" class="btn-outline-dark">
        Добавить продукты
    </a>
</div>
